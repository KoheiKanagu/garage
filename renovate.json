{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommits"],
  "force": {
    "constraints": {
      "flutter": "3.18.0-0"
    }
  },
  "schedule": ["before 4am on Monday"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "enabledManagers": [
    "github-actions",
    "pub",
    "npm",
    "custom.regex",
    "cocoapods"
  ],
  "labels": ["dependencies"],
  "ignoreDeps": ["dart"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "firebase_*",
        "cloud_firestore",
        "cloud_functions"
      ],
      "groupName": "firebase"
    },
    {
      "matchPackagePatterns": [
        "freezed_annotation",
        "freezed",
        "json_annotation",
        "json_serializable"
      ],
      "groupName": "freezed"
    },
    {
      "matchPackagePatterns": ["hooks_riverpod", "riverpod_*"],
      "groupName": "riverpod"
    },
    {
      "matchPackagePatterns": ["go_router", "go_router_builder"],
      "groupName": "go_router"
    },
    {
      "matchPackagePatterns": ["_info_plus$"],
      "groupName": "info_plus"
    },
    {
      "matchPackagePatterns": ["@typescript-eslint/*", "eslint*"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["@swc/jest", "@types/jest", "jest"],
      "groupName": "jest"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^renovate.json$"],
      "matchStrings": ["\"flutter\": \"(?<currentValue>[^\"]+).*\".*"],
      "depNameTemplate": "flutter",
      "packageNameTemplate": "flutter/flutter",
      "datasourceTemplate": "flutter-version",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+).*?$",
      "extractVersionTemplate": "^(?<version>.*)$"
    }
  ]
}
