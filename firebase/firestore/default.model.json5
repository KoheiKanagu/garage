{
  feedbacks_v1: {
    $documentId: {
      createdAt: "Timestamp", // FieldValue.serverTimestamp
      updatedAt: "Timestamp", // FieldValue.serverTimestamp

      // サインアウト後のフィードバックの場合はnull
      // nullable
      uid: "$uid",

      // 返信先のメールアドレス
      email: "email@example.com",

      message: "メッセージ",

      // pngのスクリーンショットをbase64でエンコードしたもの
      screenshotBase64: "base64",

      deviceInfo: {
        osVersion: "foo",
        modelName: "foo",
        locale: "foo",
        appVersion: "foo",
        appPackageName: "foo",
      },

      // どこからのフィードバックか
      from: "foo", // configure | shortcut | unknown
    },
  },

  issues_v1: {
    $documentId: {
      createdAt: "Timestamp", // FieldValue.serverTimestamp
      updatedAt: "Timestamp", // FieldValue.serverTimestamp

      // サインアウト後のフィードバックの場合はnull
      // nullable
      createdBy: "$uid",

      // ユーザのメールアドレス
      email: "user@example.com",

      // どこからのフィードバックか
      from: "configure", // configure | shortcut | unknown

      deviceInfo: {
        osVersion: "foo",
        modelName: "foo",
        locale: "foo",
        appVersion: "foo",
        appPackageName: "foo",
      },

      // このissueのステータス
      status: "open", // open | closed

      // メールで通知するかどうか
      notifyByEmail: true,
      // プッシュ通知で通知するかどうか
      notifyByPush: true,

      // アプリの言語
      languageCode: "ja",

      // サブコレクション
      comments: {
        $documentId: {
          createdAt: "Timestamp", // FieldValue.serverTimestamp
          updatedAt: "Timestamp", // FieldValue.serverTimestamp

          // サインアウト後のフィードバックの場合はnull
          // サポートからのコメントの場合は"support"
          // nullable
          createdBy: "$uid",

          // non-nullable
          message: "メッセージ",

          attachments: [
            {
              // スクリーンショットをbase64でエンコードしたもの
              contentType: "image/png",
              value: "base64",
            },
          ],
        },
      },
    },
  },

  mail_v1: {
    // Trigger Email from Firestore Extension に対応するフィールド
    // https://firebase.google.com/docs/extensions/official/firestore-send-email?hl=ja#sender_and_recipient_fields
    $documentId: {
      to: "support@kingu.dev",
      cc: "user@example.com",
      message: {
        // delivery.info.messageId があれば入れる
        messageId: "foo",
      },

      // Trigger Email from Firestore Extension によって追加される
      // https://firebase.google.com/docs/extensions/official/firestore-send-email/delivery-status
      delivery: {
        info: {
          messageId: "foo",
        },
      },

      template: {
        name: "createIssueJa",
        data: {
          attachmentsPath: "data:image/png;base64,xxxxxx",
          appName: "場所で音楽",
          issueId: "123",
          message: "メッセージ",

          // impression, bugReport, featureRequest, other
          type: "impression",
        },
      },
    },
  },

  mailTemplates_v1: {
    createIssueJa: {
      subject: "[{{issueId}}] {{appName}} へのお問い合わせ",
      html: "html",
      attachments: [
        {
          filename: "{{issueId}}.png",
          path: "{{attachmentsPath}}",
        },
      ],
    },

    footer: {
      partial: true,
      html: "html",
    },
  },
}
