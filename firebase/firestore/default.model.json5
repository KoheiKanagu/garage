{
  feedbacks_v1: {
    $documentId: {
      createdAt: "Timestamp", // FieldValue.serverTimestamp
      updatedAt: "Timestamp", // FieldValue.serverTimestamp

      // サインアウト後のフィードバックの場合はnull
      // nullable
      createdBy: "$uid",

      // ユーザのメールアドレス
      email: "email@example.com",

      // どこからのフィードバックか
      from: "configure", // configure | shortcut | unknown

      deviceInfo: {
        osVersion: "foo",
        modelName: "foo",
        locale: "foo",
        appVersion: "foo",
        appPackageName: "foo",
      },

      // フィードバックの種類
      type: "impression", // impression | bugReport | featureRequest | other

      // このフィードバックのステータス
      status: "open", // open | closed

      // メールで通知するかどうか
      notifyByEmail: true,

      // プッシュ通知で通知するかどうか
      notifyByPush: true,

      // サブコレクション
      comments: {
        $documentId: {
          createdAt: "Timestamp", // FieldValue.serverTimestamp
          updatedAt: "Timestamp", // FieldValue.serverTimestamp

          // サインアウト後のフィードバックの場合はnull
          // サポートからのコメントの場合は"support"
          // nullable
          createdBy: "$uid",

          // non-nullable
          message: "メッセージ",

          attachments: [
            // スクリーンショットをbase64でエンコードしたもの
            // Data URL
            "data:image/png;base64,xxxxxx",
          ],
        },
      },
    },
  },

  mails_v1: {
    // Trigger Email from Firestore Extension に対応するフィールド
    // https://firebase.google.com/docs/extensions/official/firestore-send-email?hl=ja#sender_and_recipient_fields
    $documentId: {
      to: "support@kingu.dev",
      cc: "user@example.com",
      message: {
        // delivery.info.messageId があれば入れる
        messageId: "foo",
      },

      // Trigger Email from Firestore Extension によって追加される
      // https://firebase.google.com/docs/extensions/official/firestore-send-email/delivery-status
      delivery: {
        info: {
          messageId: "foo",
        },
      },

      template: {
        name: "newFeedbackJa",
        data: {
          attachmentsPath: "data:image/png;base64,xxxxxx",
          appName: "場所で音楽",
          feedbackId: "123",
          message: "メッセージ",
          type: "impression",
        },
      },
    },
  },

  mailTemplates_v1: {
    newFeedbackJa: {
      subject: "[{{feedbackId}}] {{appName}} へのお問い合わせ",
      html: "html",
      attachments: [
        {
          filename: "{{feedbackId}}.png",
          path: "{{attachmentsPath}}",
        },
      ],
    },

    footer: {
      partial: true,
      html: "html",
    },
  },
}
